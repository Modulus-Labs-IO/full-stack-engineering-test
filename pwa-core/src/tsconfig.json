      "module": "commonjs",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports":true,
      "allowJs": true,
      "target": "ES2020",
      "outDir": "dist",
      "sourceMap": true
    },
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "server/**/*.spec.ts"
    ]
  }